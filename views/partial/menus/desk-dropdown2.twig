{# dropdownn md #}
<div class="d-none black d-md-block col-md-10 mt20">
    
    <div class="menu header-menu d-flex">
        <!-- Dropdown menu links -->
        <ul class="d-flex justify-content-center t1 w-100 m-a">
            {% for item in menu.items %}
         
            <li class="wmax-12 m-a d-block item-menu link pb30 ">
                <a class="color3 " href="{{ item.link }}">
                {# si lien  #}
                           
                         <i class="t6 {{ item.logo }}"></i> {{ item.title }}
                    
                </a>
                 {% if item.children %}
                    <ul class="nav-drop">
                        {% for child in item.children %}
                            <li class="nav-drop-item">
                                <a href="{{ child.link }}">
                                    <i class="t6 t-md-8 t-lg-8 {{ child.logo }}"></i> {{ child.title }}
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </li>
            
            {% endfor %}
            
           
           
        </ul>
            
        
    </div>
</div>